{
  "name": "kdm",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/kdm-app/src",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project kdm --web",
  "targets": {
    "build-android": {
      "executor": "@nx/react-native:build-android",
      "outputs": [
        "{projectRoot}/build/outputs/bundle",
        "{projectRoot}/build/outputs/apk"
      ],
      "options": {
        "tasks": [
          "clean",
          "assembleRelease"
        ],
        "resetCache": true
      }
    },
    "install-android": {
      "executor": "@nx/react-native:build-android",
      "outputs": [
        "{projectRoot}/build/outputs/bundle",
        "{projectRoot}/build/outputs/apk"
      ],
      "options": {
        "tasks": [
          "clean",
          "installRelease"
        ],
        "resetCache": true
      }
    },
    "build-ios": {
      "executor": "@nx/react-native:build-ios",
      "options": {
        "buildFolder": "dist/ios/build",
        "mode": "Release"
      }
    },
    "install-ios": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx build-ios kdm",
          "ios-deploy --debug --bundle apps/kdm-app/ios/dist/ios/build/Build/Products/Release-iphoneos/Kdm.app"
        ],
        "parallel": false
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tsc -b"
        ],
        "cwd": "apps/kdm-app"
      }
    }
  }
}
